<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="300.0"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="netty.object_release.MainController">
    <HBox>
        <Button onAction="#pressOnDownloadBtn" text="Download" HBox.hgrow="ALWAYS"/>
        <Button onAction="#pressOnUploadBtn" text="Upload" HBox.hgrow="ALWAYS"/>
        <Button onAction="#pressOnDeleteBtn" text="Delete" HBox.hgrow="ALWAYS"/>
    </HBox>
    <ListView fx:id="serverFilesList" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
</VBox>
